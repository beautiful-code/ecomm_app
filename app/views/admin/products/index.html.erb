<div class="row">
  <%= form_tag(admin_products_path,method: 'get', class: 'form-inline') do %>
  <div class="form-group col-xs-offset-2 col-xs-6">
    <%= text_field_tag :search, params[:search] , class: "search_text_field"%>
    </div>
    <div class="form-group col-xs-2">
      <%= submit_tag "Search", name: nil, class: 'btn btn-primary'%>
  </div>
  <% end %>
</div>
<div class="row">
  <div class="col-xs-offset-1 col-xs-10">
    <table class="table table-stripped">
      <thead>
      <th>Product Name</th>
      <th>Manufacturer</th>
      <th>Image</th>
      <th>Product Description</th>
      <th>Units</th>
      <th>Cost</th>
      <th></th>
      <th></th>
      </thead>
      <tbody>
      <%= render 'admin_product', :products => @products %>
      </tbody>
    </table>
    <tr><%= link_to "+ Add Product", new_admin_product_path, class: "btn btn-primary btn-large" %> </tr>
  </div>
</div>