<% provide(:title,"Your Order #{params[:id]}") %>
<div class="container" >
  <div class="pull-left">
    <div class="one_line">
      <h3>Order id:</h3>
      <h4>#<%= params[:id] %></h4>
    </div>
    <div class="one_line">
      <h5>Date:</h5>
      <p><%= @order.created_at %></p>
    </div>
  </div>
  <div class="pull-right">
    <div class="one_line">
      <h5> Delivery Address: </h5>
      <p><%= @order.address %></p>
    </div>
    <div class="one_line">
      <h5> Status: </h5>
      <p> <%= @order.status %> </p>
    </div>
  </div>
</div>
<div class="container" >
  <table class="table table-striped">
    <thead>
    <th>Item</th>
    <th>Quantity</th>
    <th>Cost/Item</th>
    <th>SubTotal</th>
    </thead>
    <tbody>
    <% @display_order_items.each do |display_order_item| %>
      <%= render "display_order_item", display_item: display_order_item %>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td>Total Amount:</td>
      <td><%= @order.amount %></td>
    </tr>
    </tbody>
  </table>
</div>