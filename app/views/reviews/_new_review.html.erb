<%= form_for(@user_review,class:"form-horizontal",role:"form") do |f| %>
  <h4>Write Review</h4>
  <div class="form-group">
    <%= f.label :title , class:"col-xs-4 form-label"%>
    <div class="col-xs-8">
      <%= f.text_field :title , class:"form-control"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content, "Write Review" , class:"col-xs-4 form-label"%>
    <div class="col-xs-8">
      <%= f.text_area :content , class:"form-control", rows:"4" %>
    </div>
  </div>
  <%= f.text_field :user_id, value: current_user.id, class:"hidden" %>
  <%= f.text_field :product_id, value: params[:id], class:"hidden" %>
  <div class="form-group">
    <div class="col-xs-offset-9">

        <%= f.submit "Post Review" , class:"btn btn-primary" %>
    </div>
  </div>
<% end %>